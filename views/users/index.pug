extends ../layouts/common
block content
    h1 Users
    a.btn.btn-primary(href="/users/create") New User
    form(action='/users/search', method='GET', class="d-flex")
        input(type='text', name='q', class="form-control")
        button(class="btn btn-primary ml-3") Search
    table.table
        tr
            th Avatar
            th Name
            th Phone
            th Action
        each user in users
            tr
                td
                    img(src=user.avatar, width="32")
                td=user.name
                td=user.phone
                td
                    a.btn.btn-light(href='/users/' + user.id) View